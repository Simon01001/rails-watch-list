<%= @list.name %>

<%= simple_form_for [ @list, @bookmark ] do |f| %>
  <%= f.association :movie, as: :select, label: "Which movie do you want to add??" %>
  <%= f.input :comment, placeholder: "Add your review here" %>
  <%= f.submit "Complete", class: "btn btn-primary" %>
<% end %>

<% @list.bookmarks.each do |bookmark|%>
  <p><%= bookmark.movie.title %></p>
  <p><%= bookmark.comment %></p>
<% end %>


<%= link_to "Back to lists", lists_path %>
<%= link_to "Delete list", list_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
